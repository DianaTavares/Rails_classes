<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
        <h3 class="modal-title" > Responsable de Pago </h3>
    </div>
    <%= form_for :users, url: users_recive_path, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :name, "Nombre:", class:"control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "Email:", class: "control-label" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <h4>Total a pagar = <%= @booking.total%></h4>
        <div class="modal-footer">
          <%= f.submit "Pagar!!", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
